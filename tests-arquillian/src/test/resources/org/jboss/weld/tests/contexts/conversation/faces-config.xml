<?xml version="1.0"?>
<faces-config version="1.2" 
              xmlns="http://java.sun.com/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_1_2.xsd">
  
   <lifecycle>
      <phase-listener>org.jboss.weld.tests.contexts.conversation.ConversationTestPhaseListener</phase-listener>
   </lifecycle>
   
   <navigation-rule>
      <from-view-id>/cloud.jspx</from-view-id>
      <navigation-case>
         <from-action>#{cloud.thunderstorm}</from-action>
         <to-view-id>/thunderstorm.jspx</to-view-id>
      </navigation-case>
   </navigation-rule>
   
   <navigation-rule>
      <from-view-id>/thunderstorm.jspx</from-view-id>
      <navigation-case>
         <from-action>#{thunderstorm.cloud}</from-action>
         <to-view-id>/cloud.jspx</to-view-id>
      </navigation-case>
   </navigation-rule>

   <navigation-rule>
      <from-view-id>/cloud.jspx</from-view-id>
      <navigation-case>
         <from-action>#{cloud.hailstorm}</from-action>
         <to-view-id>/hailstorm.jspx</to-view-id>
         <redirect/>
      </navigation-case>
   </navigation-rule>
   
   <navigation-rule>
      <from-view-id>/cloud.jspx</from-view-id>
      <navigation-case>
         <from-action>#{cloud.snowstorm}</from-action>
         <to-view-id>/winter/snowstorm.jspx</to-view-id>
         <redirect/>
      </navigation-case>
   </navigation-rule>
   
   <navigation-rule>
      <from-view-id>/winter/snowstorm.jspx</from-view-id>
      <navigation-case>
         <from-action>#{snowstorm.go}</from-action>
         <to-view-id>/winter/snowstorm.jspx</to-view-id>
         <redirect/>
      </navigation-case>
   </navigation-rule>
   
   <navigation-rule>
      <from-view-id>/cloud.jspx</from-view-id>
      <navigation-case>
         <from-action>#{cloud.hurricane}</from-action>
         <to-view-id>/cloud.jspx</to-view-id>
         <redirect/>
      </navigation-case>
   </navigation-rule>
   
      <navigation-rule>
      <from-view-id>/cloud.jspx</from-view-id>
      <navigation-case>
         <from-action>#{cloud.sleet}</from-action>
         <to-view-id>/cloud.jspx</to-view-id>
         <redirect/>
      </navigation-case>
   </navigation-rule>

   <navigation-rule>
      <from-view-id>/hailstorm.jspx</from-view-id>
      <navigation-case>
         <from-action>#{hailstorm.cloud}</from-action>
         <to-view-id>/cloud.jspx</to-view-id>
      </navigation-case>
   </navigation-rule>
   
   <navigation-rule>
      <from-view-id>/locking-issue.jspx</from-view-id>
      <navigation-case>
         <from-action>#{lockingIssueBean.start}</from-action>
         <to-view-id>/locking-issue.jspx</to-view-id>
         <redirect />
      </navigation-case>
   </navigation-rule>
   
</faces-config>
